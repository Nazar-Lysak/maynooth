{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass('additional-banner-wrap') }}>
    <div class='container'>
        {{ content.field_main_image }}
        {{ content.field_text_summary }}
        <h2>
            {{ content.field_main_title.0 }}
        </h2>
    </div>
  </div>
{% endblock paragraph %}
