{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
        <div class="wrapper">
            <a href={{ content.field_promo_url.0['#url'] }}>
                {{ content.field_promo_img }}
            </a>
            <div class="wrapper_text">
                <h3 class="wrapper_text__title">
                    {{ content.field_promo_main_title[0] }}
                </h3>
                <h3 class="wrapper_text__description">
                    {{ content.field_promo_main_description[0] }}
                </h3>
            </div>
        <div>
        {{ content.field_promo_url }}
  </div>
{% endblock paragraph %}
